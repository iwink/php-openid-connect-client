        "laminas/laminas-filter" : ">=2.2.1",
        "laminas/laminas-session" : ">=2.2.1",
        "laminas/laminas-json" : ">=2.2.1"
    },

    "require-dev": {
        "phpunit/phpunit": "~4.4"
    },

    "autoload" : {
        "psr-0" : {
            "InoOicClient\\" : "src/"
        }
    }
}
