{
    "name" : "ivan-novakov/php-openid-connect-client",
	"description" : "OAuth2/OpenID Connect client library",
	"type": "library",
	"license": "BSD-3-Clause",
	"homepage": "https://github.com/bradjonesllc/php-openid-connect-client",

	"keywords": [
		"oauth2",
		"openid connect",
		"authentication",
		"authorization",
		"client",
		"library",
		"zf2",
		"zend framework"
